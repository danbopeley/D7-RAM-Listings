        'street'      => $csv['Address'], // Address
        'additional'  => '',
        'city'        => $csv['City'], // City
        'province'    => location_province_code($defaultCountry, $csv['State']), // State
        'postal_code' => $csv['Zip'],  // Zip
        'country'     => $defaultCountry,
        'latitude'    => '',
        'longitude'   => '',
        'phone'       => $csv['Office_Phone'],  // Office_Phone?
        'fax'         => ''
      )
    );
    $node->locations = $locations;
}


