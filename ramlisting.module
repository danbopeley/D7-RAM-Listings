function ramlisting_logit($action, $item) {
		
	$feedback = variable_get('ramlisting_feedback_level', 1);
	
	switch($action){
		case 'new_listing':
			$mlsnum = $item->title;
			$path = $item->path['alias'];
			if($feedback > 0){
				$mlsnum = $item->title;
				$message = 'Listing '.$mlsnum.' imported successfully.. '. l('view listing', $path);
				drupal_set_message($message, 'status', TRUE);
			}
			watchdog('ramlisting', 'Listing %mls imported successfully.', array('%mls' => $mlsnum), WATCHDOG_NOTICE, l('view listing', $path));
			break;
		case 'failed_new_listing':
			
			
			break;
		case 'updated_listing':
			$mlsnum = $item->title;
			//$path = $item->path['alias'];
			if($feedback > 0){
				$mlsnum = $item->title;
				$message = 'Listing '.$mlsnum.' updated successfully. ';
				drupal_set_message($message, 'status', TRUE);
			}
			
			watchdog('ramlisting', 'Listing %mls updated successfully.', array('%mls' => $mlsnum), WATCHDOG_NOTICE);
			
			
			break;
			
		case 'updated_listing_nochange':
			$message = 'Listing '.$item.' no change. '. $item;
			drupal_set_message($message, 'status', TRUE);
			watchdog('ramlisting', 'Listing %mls no change.', array('%mls' => $item), WATCHDOG_NOTICE);
			break;
		
		case 'failed_updated_listing':
			
			
			break;
		case 'store_image_fail':
						$message = 'Listing image store fail for. '. $item;
			drupal_set_message($message, 'warning', TRUE);
			watchdog('ramlisting', 'Listing image store failed for %img.', array('%img' => $item), WATCHDOG_ERROR);

			
			
			break;	
		case 'store_image_success':
			$message = 'Listing image store success for. '. $item;
			drupal_set_message($message, 'status', TRUE);
			watchdog('ramlisting', 'Listing image store success for %img.', array('%img' => $item), WATCHDOG_NOTICE);
			break;
		case 'listing_update_log':
			$message = 'Listing update log.<br /> '. $item;
			drupal_set_message($message, 'status', TRUE);
			watchdog('ramlisting', 'Listing update log %log.', array('%log' => $item), WATCHDOG_NOTICE);
			break;
	}
	
}